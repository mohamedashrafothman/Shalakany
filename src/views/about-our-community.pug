extends ./layouts/_index_layout.pug
include ./mixins/_about-us-card.pug
include ./mixins/_page-header.pug

append variables
	- var page_title = "our community";
	- var header_data = {title: page_title, back: { title: "about us", href: "about.html" }, img: { src: "./images/about-us/about-us-5.jpg" }, breadcrumb: [{ title: "Home", href: "index.html" }, { title: "about us", href: "about.html" }, { title: page_title, href: "about-our-community.html" }]}

block content
	main(role="main")
		+page-header(header_data)

		article.page-article
			section.section.section-bg__color--white
				.container-fluid
					.row
						.col-12.col-lg-6.offset-lg-5
							.page-article__content
								p At Shalakany, we strongly believe that making a positive impact on our community and the world around us is a moral imperative and we are proud of our various initiatives over the years.
