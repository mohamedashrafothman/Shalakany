			.container
				.row.px-0.px-lg-4
					.col-12
						h5.section__title.section__title--primary.text-center.wow.fadeIn(data-wow-duration="1.2s", data-wow-delay="0.2s") paintings
					.col-12.col-md-10.offset-md-1.col-lg-10.offset-lg-1
						.gallery__slider
							.swiper-container#gallery-slider(data-swiper-effect="fade")
								.swiper-wrapper
									each paint, index in gallery
										.swiper-slide
											figure.paint.paint__color--primary.paint__size--lg.wow.fadeIn(data-wow-duration="1s", data-wow-delay="0s")
												.paint__frame(data-swiper-parallax="-200")
													img.paint__image(src=paint.img.src, alt=paint.title)
												figcaption.paint__description.text-center
													.row
														.col-10.offset-1.col-sm-8.offset-sm-2.col-md-6.offset-md-3
															h6.paint__title.wow.fadeIn(data-swiper-parallax="-250", data-wow-duration="1s", data-wow-delay="0s")=paint.title
