							.gallery__slider-buttons
								.swiper-button-prev.wow.fadeInRight(for="gallery-slider", data-wow-duration="1s", data-wow-delay="0.5s")
								.swiper-button-next.wow.fadeInLeft(for="gallery-slider", data-wow-duration="1s", data-wow-delay="0.5s")
					.col-12
						.gallery__thumbs
							.swiper-container#gallery-thumbs(data-swiper-effect="slide")
								.swiper-wrapper
									each paint, index in gallery
										.swiper-slide
											figure.paint.paint__size--sm-free
												.paint__frame.wow.fadeInRight(data-swiper-parallax="-200", data-wow-duration="1s", data-wow-delay="0.2s")
													img.paint__image(src=paint.img.src, alt=paint.title)
