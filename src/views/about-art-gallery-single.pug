extends ./layouts/_index_layout.pug
include ./mixins/_about-us-card.pug
include ./mixins/_inner-header.pug

append variables
	- var page_title = "Mahmoud Sa'id";
	- var page_subtitle = "1897 - 1664";
	- var header_data = {title: page_title, subtitle: page_subtitle, back: { title: "art gallery", href: "about-art-gallery-listing.html" }, breadcrumb: [{ title: "Home", href: "index.html" }, { title: "about", href: "about.html" }, { title: "art gallery", href: "about-art-gallery-listing.html" }, { title: page_title, href: "about-art-gallery-single.html" }]};

block content
	main#about-art-gallery-single(role="main")
		+inner-header(header_data)
		article.inner-article
			.container-fluid
				.row
					.col-12.col-md-5.col-lg-5.col-xl-4.pl-0
						section.section.section__bg--white
							.row
								.col-12.pl-0
									.inner-article__content.px-0
										.inner-article__img.mb-5.wow.fadeInLeft(data-wow-duration="1.6s", data-wow-delay="0s")
											img(src="./images/art-gallery/artist.jpg")
					.col-12.col-md-7.col-lg-6.col-xl-6.offset-xl-1
						section.section.section__bg--white
							.row
								.col-12
									h5.section__title.section__title--primary.wow.fadeInUp biography
								.col-12
									.inner-article__content.wow.fadeIn(data-wow-duration="1s", data-wow-delay="2s")
