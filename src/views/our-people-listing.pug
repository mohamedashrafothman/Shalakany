extends ./layouts/_index_layout.pug
include ./mixins/_about-us-card.pug
include ./mixins/_inner-header.pug
include ./mixins/_person-card.pug

append variables
	- var page_title = "our people";
	- var header_data = {title: page_title, img: { src: "./images/books-shelf.jpg" }, breadcrumb: [{ title: "Home", href: "index.html" }, { title: page_title, href: "our-people-listing.html" }]};

block content
	main#our-people-listing(role="main")
		+inner-header(header_data)
		article.inner-article
			section.section.section__bg--white
				.container-fluid
					.row
						.col-12.col-md-6.offset-md-5
							.inner-article__content
								p Our lawyers are leaders in their fields and are considered experts in their respective areas of specialization. Through a blend of experience and expertise, our lawyers provide top quality legal services to our clients.
		section.partners.section.section__bg--white.px-5
			.container
				.row
					.col-12.py-5
						h5.section__title.section__title--primary.text-center partners
					.col-12
						.row
							each partner, i in persons.filter(function(item) {return item.type === "partner"})
								.col-12.col-md-6.col-lg-4.col-xl-3.mb-5
									+person(partner, i)
		section.senior-associate.section.section__bg--white.px-5
			.container
				.row
					.col-12.py-5
						h5.section__title.section__title--primary.text-center senior associates
					.col-12
						.row
							each senior_associate, i in persons.filter(function(item) {return item.type === "senior associate"})
								.col-12.col-md-6.col-lg-4.col-xl-3.mb-5
									+person(senior_associate, i)
		section.senior-associate.section.section__bg--white.px-5
			.container
				.row
					.col-12.py-5
						h5.section__title.section__title--primary.text-center senior associates
					.col-12
						.row
							each consulting_associate, i in persons.filter(function(item) {return item.type === "consulting associate"})
								.col-12.col-md-6.col-lg-4.col-xl-3.mb-5
									+person(consulting_associate, i)
