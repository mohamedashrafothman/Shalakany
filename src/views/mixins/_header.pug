mixin header(data={})
	header(class=`app-navbar`)
		div(class=`app-navbar__logo ${(String(page_title).toLowerCase() == "home") ? "app-navbar__logo--home" : ""}`)
			a(href="index.html")
				img(src="./images/icons_logos/logo.svg", alt=`${locals.sitename[locals.lang]}`)
		div(class=`app-navbar__underlay ${(data.is_open) ? "d-block" : ""}`)
		div(class=`app-navbar__open-button`)
			i(class=`material-icons`) menu
		div(class=`app-navbar__side-menu ${(data.is_open) ? "is_open" : ""}`)
			div(class=`app-navbar__close-button`)
				i(class=`material-icons`) clear
			nav(class=`app-navbar__nav`)
				ol(class=`app-navbar__list` aria-label="app-navbar")
					each item, i in data.menu_list
						li(class=`app-navbar__list-item ${(String(item.title).toLowerCase() == String(page_title).toLowerCase()) ? "app-navbar__list-item--active" : ""}`, aria-current=(String(item.title).toLowerCase() == String(page_title).toLowerCase()) ? "page" : undefined)
							a(href=item.href)=item.title
