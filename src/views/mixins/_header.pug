mixin header(data={})
	// Application Header - with wordpress nav classes
	header(class=`app-navbar`)
		div(class=`app-navbar__logo wow fadeIn ${(String(page_title).toLowerCase() == "home") ? "app-navbar__logo--home" : "app-navbar__logo--inner"}`, data-wow-duration="1s", data-wow-delay="1s")
			a(href="index.html")
				img(src="./images/icons-logos/Logo.svg", alt=`${locals.sitename[locals.lang]}`)
		div(class=`app-navbar__underlay ${(data.is_menu_open) ? "menu-open" : ((data.is_search_open) ? "search-open" : "")}`)
		button(class=`app-navbar__open-menu wow fadeInRight`, data-wow-duration="0.75s", data-wow-delay="1.6s")
			i(class=`material-icons`) menu
		button(class=`app-navbar__open-search wow fadeInRight ${(data.is_search_open) ? "is_open" : ""}` data-wow-duration="0.75s", data-wow-delay="1.8s")
			i(class=`material-icons`) search
		div(class=`app-navbar__side-menu ${(data.is_menu_open) ? "is_open" : ""}`)
			button(class=`app-navbar__close-menu`)
				i(class=`material-icons`) clear
			nav(class=`app-navbar__nav`)
				// ".nav" class also can be ".app-navbar__list" class
				ul(class=`nav` aria-label="app-navbar")
					// ".menu-item" class also can be ".app-navbar__list-item" class
					// ".active" class also can be ".app-navbar__list-item--active" class
					each item, i in data.menu_list
						li(class=`menu-item ${(String(item.title).toLowerCase() == String(page_title).toLowerCase()) ? "active" : ""}`, aria-current=(String(item.title).toLowerCase() == String(page_title).toLowerCase()) ? "page" : undefined)
							a(href=item.href)=item.title
		div(class=`app-navbar__search ${(data.is_search_open) ? "is_open" : ""}`)
			form(class=`app-navbar__search-form`, action="search-results.html", method="GET")
				input(type="text", class=`app-navbar__search-input`, placeholder="Search....", value="")
	// Application Header End/.
