extends ./layouts/_index_layout.pug
include ./mixins/_service-card.pug

append variables
	- var page_title = "Home";

block content
	// Content
	main#index(role="main")
		// Home Banner Section
		section.section#home-banner
			.section__bg--img-container.section__gradient-linear.section__gradient-linear--primary-0
				img.section__bg--img(src="./images/patterns/pattern.jpg", data-paroller-direction="vertical", data-paroller-factor="-0.05", data-paroller-type="foreground")
			.container-fluid
				.row
					.col-12.col-md-6.col-xl-5
						#home-banner__side
							.container
								.row
									.col-12.col-sm-8.col-md-12
										#home-banner__slider
											.swiper-container#home-banner-slider(data-swiper-effect="fade")
												.swiper-wrapper
													.swiper-slide
														h1#home-banner__title.wow.fadeInUp(data-swiper-parallax="-300", data-wow-duration="1.2s", data-wow-delay="0.2s")
															strong With over a century
															br
															|  of experience
														p#home-banner__text.wow.fadeInUp(data-swiper-parallax="-200", data-wow-duration="1s", data-wow-delay="1s")
															| Since its establishment in 1912, Shalakany has achieved a record of success and growth that today makes it one of the leading corporate law firms in Egypt and the Middle East.
									.col-12
										a#home-banner__button.btn.btn-secondary.wow.fadeInUp(href="about.html", data-wow-duration="1s", data-wow-delay="1.2s") About the firm
									.col-12
										#home-banner__slider-buttons
											.swiper-button-prev.swiper-button-white.wow.fadeInRight(for="home-banner-slider", data-wow-duration="1s", data-wow-delay="1.4s")
											.swiper-button-next.swiper-button-white.wow.fadeInLeft(for="home-banner-slider", data-wow-duration="1s", data-wow-delay="1.4s")
					.d-none.d-md-block.col-md-6.col-xl-7.pr-0
						.section#home-banner__img
							.section__bg--img-container.wow.fadeInRight(data-wow-duration="1.6s", data-wow-delay="0s")
								img.section__bg--img(src="./images/faruk-kaymak-CNVvDjVDiVI-unsplash.jpg", data-paroller-direction="vertical", data-paroller-factor="-0.05", data-paroller-type="foreground")
		// Home Banner Section End/.

		// Home What We Do Section
		section.section.section__bg--white#home-what-we-do
			.container-fluid
				.row
					.col-10.offset-2.col-md-10.offset-md-2.col-lg-12.offset-lg-0.px-0
						.brochure.brochure__bg--gray-400(data-paroller-direction="vertical", data-paroller-factor="-0.025", data-paroller-type="foreground")
							.row
								.col-12.col-md-9.col-lg-5
									.brochure__slider.brochure__slider--services.brochure__slider--left(data-paroller-direction="vertical", data-paroller-factor="0.025", data-paroller-type="foreground")
										.swiper-container#home-whatWeDo-slider(data-swiper-effect="fade")
											.swiper-wrapper
												each service, i in services
													.swiper-slide
														+service-card(service, i)
										.brochure__slider-buttons.brochure__slider-buttons--white
											.swiper-button-prev(for="home-whatWeDo-slider")
											.swiper-button-next(for="home-whatWeDo-slider")
								.col-12.col-lg-7.offset-lg-0
									.brochure__content.text-left.align-items-start
										h2.brochure__title.wow.fadeInUp(data-wow-duration="1.2s", data-wow-delay="0.2s") what we do
										p.brochure__text.wow.fadeInUp(data-wow-duration="1s", data-wow-delay="0.6s") Shalakany is committed to delivering top quality legal services to our clients. As a full-service corporate law firm, we provide bespoke specialized legal services across a variety of different practice areas and sectors.
										a.brochure__link.align-self-end.wow.fadeInLeft(href="about.html", data-wow-duration="1s", data-wow-delay="0.8s") know More
		// Home What We Do Section End/.

		// Home Clients Section
		section.section.clients
			.section__bg--img-container.section__gradient-linear.section__gradient-linear--primary-90-reverse
				img.section__bg--img(src="./images/patterns/pattern.jpg")
			.container-fluid
				.row
					.col-12
						.brochure
							.brochure__image.brochure__image--border.wow.fadeInUp(data-wow-duration="1.4s", data-wow-delay="0", data-paroller-direction="vertical", data-paroller-factor="0.015", data-paroller-type="foreground")
								img(src="./images/stairs.jpg")
							.container-fluid
								.row
									.col-12.col-md-10.col-xl-5
										.brochure__content.text-left.align-items-start
											h2.brochure__title.wow.fadeInLeft(data-wow-duration="1.2s", data-wow-delay="0.2s") our clients
											p.brochure__text.wow.fadeInLeft(data-wow-duration="1s", data-wow-delay="0.6s") Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd
											a.brochure__link.wow.fadeInLeft(href="services-and-clients.html", data-wow-duration="1s", data-wow-delay="0.8s") all clients
									.col-12.col-md-10.offset-md-2.col-xl-6.offset-xl-1
										.brochure__slider.brochure__slider--clients
											.swiper-container#clients-slider(data-swiper-effect="slide", data-swiper-slidesPerColumn="1")
												.swiper-wrapper
													.swiper-slide
														.logo.wow.fadeInUp(data-wow-duration="1s", data-wow-delay="1s")
															img(src="./images/clients/1.svg", alt="")
													.swiper-slide
														.logo.wow.fadeInUp(data-wow-duration="1s", data-wow-delay="1.1s")
															img(src="./images/clients/2.svg", alt="")
													.swiper-slide
														.logo.wow.fadeInUp(data-wow-duration="1s", data-wow-delay="1.2s")
															img(src="./images/clients/3.svg", alt="")
													.swiper-slide
														.logo.wow.fadeInUp(data-wow-duration="1s", data-wow-delay="1.3s")
															img(src="./images/clients/4.svg", alt="")
													.swiper-slide
														.logo.wow.fadeInUp(data-wow-duration="1s", data-wow-delay="1.4s")
															img(src="./images/clients/1.svg", alt="")
													.swiper-slide
														.logo.wow.fadeInUp(data-wow-duration="1s", data-wow-delay="1.5s")
															img(src="./images/clients/2.svg", alt="")
													.swiper-slide
														.logo.wow.fadeInUp(data-wow-duration="1s", data-wow-delay="1.6s")
															img(src="./images/clients/3.svg", alt="")
													.swiper-slide
														.logo.wow.fadeInUp(data-wow-duration="1s", data-wow-delay="1.7s")
															img(src="./images/clients/4.svg", alt="")
											.brochure__slider-buttons.brochure__slider-buttons--transparent
												.swiper-button-prev.swiper-button-white.wow.fadeInRight(for="clients-slider", data-wow-duration="1s", data-wow-delay="1.2s")
												.swiper-button-next.swiper-button-white.wow.fadeInLeft(for="clients-slider", data-wow-duration="1s", data-wow-delay="1.2s")
		// Home Clients Section End/.

		// Home Latest News Section
		section.section.section__bg--white#home-latest-news
			.container-fluid
				.row
					.col-12
						.brochure.brochure__bg--brown.brochure__no-border
							.row
								.col-12
									.brochure__content.d-block
										.row
											.col-12.col-md-6
												h2.brochure__title.text-left.wow.fadeInLeft(data-wow-duration="1.2s", data-wow-delay="0.2s") latest news
											.col-12.col-md-6.d-flex.align-items-center.justify-content-md-end
												a.brochure__link.m-0.mt-md-0.mt-5.wow.fadeInRight(href="news-and-events-listing.html", data-wow-duration="1s", data-wow-delay="0.4s") all news
								.col-12
									.brochure__content.pt-0
										.row
											.col-12.col-md-6.mb-md-0.mb-4
												.news.news__vertical.news__bg--transparent.wow.fadeInUp(data-wow-duration="1s", data-wow-delay="0.6s")
													.row
														.col-12
															.news__image
																a(href="news-and-events-single.html")
																	img(src="./images/news/1.jpg", alt="Lorem ipsum dolor sit amet.")
														.col-12
															.news__content
																small.news__subtitle 20 may 2020
																h6.news__title
																	a(href="news-and-events-single.html") Lorem ipsum dolor sit amet.
																p.news__text Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore...
																a.news__link(href="news-and-events-single.html") read more
											.col-12.col-md-6.mb-md-0.mb-4
												.news.news__vertical.news__bg--transparent.wow.fadeInUp(data-wow-duration="1s", data-wow-delay="0.8s")
													.row
														.col-12
															.news__image
																a(href="news-and-events-single.html")
																	img(src="./images/news/2.jpg", alt="Lorem ipsum dolor sit amet.")
														.col-12
															.news__content
																small.news__subtitle 20 may 2020
																h6.news__title
																	a(href="news-and-events-single.html") Lorem ipsum dolor sit amet.
																p.news__text Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore...
																a.news__link(href="news-and-events-single.html") read more
		// Home Latest News Section End/.

		include ./sections/_call_to_action.pug

	// Content End/.
